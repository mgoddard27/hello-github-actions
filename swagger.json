  "components" : {
    "schemas" : {
      "ffEntity" : {
        "type" : "object",
        "properties" : {
          "softwareName" : {
            "type" : "string",
            "example" : "EXOS"
          },
          "softwareKey" : {
            "type" : "string",
            "example" : "0134A335C90221"
          }
        }
      },
      "ffRuleSet" : {
        "type" : "object",
        "properties" : {
          "IndexID" : {
            "$ref" : "#/components/schemas/ffRuleSet_IndexID"
          }
        }
      },
      "ffSettings" : {
        "type" : "object",
        "properties" : {
          "ffaEnabled" : {
            "type" : "string",
            "example" : "developer",
            "enum" : [ "none", "developer", "official", "GA" ]
          },
          "softwareName" : {
            "type" : "string",
            "example" : "EXOS"
          },
          "softwareKey" : {
            "type" : "string",
            "example" : "0134A335C90221"
          },
          "buildType" : {
            "type" : "string",
            "example" : "developer",
            "enum" : [ "developer", "official", "GA" ]
          },
          "builder" : {
            "type" : "string",
            "example" : "mgoddard"
          },
          "serialNumber" : {
            "type" : "string",
            "example" : "jsj1234"
          },
          "userLicense" : {
            "type" : "string",
            "example" : "0123A43B289"
          },
          "softwareVersion" : {
            "type" : "string",
            "example" : "1.0.0.2"
          },
          "buildDate" : {
            "type" : "string",
            "example" : "2020-10-10 10:15:41"
          },
          "bootTime" : {
            "type" : "string",
            "example" : "2020-10-10 11:05:11"
          },
          "platform" : {
            "type" : "string",
            "example" : "NGX"
          },
          "customerId" : {
            "type" : "string",
            "example" : "1023FAB013CC"
          },
          "adopterCategory" : {
            "type" : "string",
            "example" : "earlyAdopter",
            "enum" : [ "innovator", "earlyAdopter", "earlyMajority", "lastMajority", "laggard" ]
          }
        }
      },
      "body" : {
        "type" : "object",
        "properties" : {
          "FFlabel" : {
            "type" : "string",
            "example" : "NewLabel"
          },
          "precedence" : {
            "type" : "integer",
            "example" : 1
          }
        }
      },
      "ffRuleSet_IndexID" : {
        "type" : "object",
        "properties" : {
          "softwareName" : {
            "type" : "string",
            "example" : "product name"
          },
          "priority" : {
            "type" : "integer",
            "example" : 1
          },
          "createdOn" : {
            "type" : "string",
            "example" : "some-formatted-date"
          },
          "createdBy" : {
            "type" : "string",
            "example" : "userID"
          },
          "orlist" : {
            "type" : "array",
            "items" : {
              "type" : "string",
              "example" : "ffLabel1 >= value1, fflabel2 == value2, ..."
            }
          },
          "andlist" : {
            "type" : "array",
            "items" : {
              "type" : "string",
              "example" : "ffLabel1 != value"
            }
          },
          "enabledfeaturelist" : {
            "type" : "array",
            "items" : {
              "type" : "string",
              "example" : "featureA, featureB, ..."
            }
          },
          "disabledfeaturelist" : {
            "type" : "array",
            "items" : {
              "type" : "string",
              "example" : "featureA, featureB, ..."
            }
          }
        }
      }
    }
  }
